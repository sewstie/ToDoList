{
  "manifest_version": 3,
  "name": "To-Do List",
  "description": "Manage your tasks directly from Chrome.",
  "version": "1.0.0",
  "action": {
    "default_popup": "public/popup.html",
    "default_title": "To-Do List"
  },
  "permissions": ["storage", "notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "/src/assets/icon.jpg"
  }
}
